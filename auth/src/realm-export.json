{
  "realm": "simple-eam",
  "enabled": true,
  "displayName": "Simple EAM",
  "displayNameHtml": "<div class=\"kc-logo-text\"><span>Simple EAM</span></div>",
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "offlineSessionMaxLifespanEnabled": false,
  "offlineSessionMaxLifespan": 5184000,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  "defaultSignatureAlgorithm": "RS256",
  "clients": [
    {
      "clientId": "eam-server",
      "name": "EAM GraphQL Server",
      "description": "GraphQL Server Client für das EAM-Backend",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "eam-server-secret",
      "redirectUris": ["http://localhost:4000/*", "https://api.example.com/*"],
      "webOrigins": ["http://localhost:4000", "https://api.example.com"],
      "bearerOnly": false,
      "consentRequired": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "frontchannelLogout": false,
      "protocol": "openid-connect",
      "attributes": {
        "saml.assertion.signature": "false",
        "saml.force.post.binding": "false",
        "saml.multivalued.roles": "false",
        "saml.encrypt": "false",
        "saml.server.signature": "false",
        "saml.server.signature.keyinfo.ext": "false",
        "exclude.session.state.from.auth.response": "false",
        "saml_force_name_id_format": "false",
        "saml.client.signature": "false",
        "tls.client.certificate.bound.access.tokens": "false",
        "saml.authnstatement": "false",
        "display.on.consent.screen": "false",
        "saml.onetimeuse.condition": "false"
      },
      "protocolMappers": [
        {
          "name": "company_ids",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "company_ids",
            "claim.name": "company_ids",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "eam-client",
      "name": "EAM Next.js Client",
      "description": "Next.js Web Client für das EAM-Frontend",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "eam-client-secret",
      "redirectUris": ["http://localhost:3000/*", "https://eam.example.com/*"],
      "webOrigins": ["http://localhost:3000", "https://eam.example.com"],
      "bearerOnly": false,
      "consentRequired": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "publicClient": true,
      "frontchannelLogout": false,
      "protocol": "openid-connect",
      "attributes": {
        "saml.assertion.signature": "false",
        "saml.force.post.binding": "false",
        "saml.multivalued.roles": "false",
        "saml.encrypt": "false",
        "saml.server.signature": "false",
        "saml.server.signature.keyinfo.ext": "false",
        "exclude.session.state.from.auth.response": "false",
        "saml_force_name_id_format": "false",
        "saml.client.signature": "false",
        "tls.client.certificate.bound.access.tokens": "false",
        "saml.authnstatement": "false",
        "display.on.consent.screen": "false",
        "saml.onetimeuse.condition": "false"
      },
      "protocolMappers": [
        {
          "name": "company_ids",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "company_ids",
            "claim.name": "company_ids",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator mit vollen Zugriffsrechten"
      },
      {
        "name": "architect",
        "description": "Enterprise Architekt mit Bearbeitungsrechten"
      },
      {
        "name": "viewer",
        "description": "Betrachter mit Leserechten"
      }
    ]
  },
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "admin",
          "temporary": true
        }
      ],
      "realmRoles": ["admin"],
      "clientRoles": {},
      "groups": []
    },
    {
      "username": "architect",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Enterprise",
      "lastName": "Architect",
      "email": "architect@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "architect",
          "temporary": true
        }
      ],
      "realmRoles": ["architect"],
      "clientRoles": {},
      "groups": []
    },
    {
      "username": "viewer",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Read-only",
      "lastName": "User",
      "email": "viewer@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "viewer",
          "temporary": true
        }
      ],
      "realmRoles": ["viewer"],
      "clientRoles": {},
      "groups": []
    }
  ]
}
